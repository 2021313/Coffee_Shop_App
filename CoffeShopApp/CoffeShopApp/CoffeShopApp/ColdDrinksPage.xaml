<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeShopApp.ColdDrinksPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#533A33"  VerticalOptions="CenterAndExpand">
                <Label Text="Cold Drinks Menu" HorizontalOptions="CenterAndExpand" />
            </Frame>
            <Frame BackgroundColor="#EAB13D" >
                <Label Text="Iced Coffee        $3.00" TextColor="White" />
            </Frame>
            <Frame BackgroundColor="#EAB13D" >
                <Label Text="Creamy Iced Coffee     $3.50" TextColor="White" />
            </Frame>
            <Frame BackgroundColor="#EAB13D" >
                <Label Text="Nitro Cold Brew        $3.75" TextColor="White" />
            </Frame>
            <Frame BackgroundColor="#EAB13D" >
                <Label Text="Iced Latte     $4.25" TextColor="White" />
            </Frame>
            <Frame BackgroundColor="#EAB13D" >
                <Label Text="Frappucchino       $4.50" TextColor="White" />
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>