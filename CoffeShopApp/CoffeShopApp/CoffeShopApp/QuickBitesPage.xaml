<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoffeShopApp.QuickBitesPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#533A33"  VerticalOptions="CenterAndExpand">
                <Label Text="Quick Bites Menu" FontSize="28"/>
            </Frame>
            <Frame BackgroundColor="#EAB13D" >
                <StackLayout Orientation="Horizontal">
                <Image Source="bagels.png" VerticalOptions="Center" HorizontalOptions="Start" />
                <Label Text="Bagel      $1.50" TextColor="White" FontSize="20" HorizontalOptions="End"/>
                </StackLayout>
            </Frame>
            <Frame BackgroundColor="#EAB13D" >
                <StackLayout Orientation="Horizontal">
                    <Image Source="eggs.png" VerticalOptions="Center" HorizontalOptions="Start" />
                    <Label Text="Eggs Benedicts     $6.50" TextColor="White" FontSize="20" HorizontalOptions="End"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>